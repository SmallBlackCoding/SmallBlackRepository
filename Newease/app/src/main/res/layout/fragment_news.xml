<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_red_dark"
        >
        <ImageView
            android:id="@+id/top_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/base_common_default_icon_small"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
    <TextView
        android:id="@+id/top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:textSize="13sp"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        />
   <ImageView
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:layout_toLeftOf="@id/top_text"
       android:src="@drawable/ic_main_menu_gold"
       android:layout_marginRight="10dp"
       android:layout_centerVertical="true"
       />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/tab_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_index"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>